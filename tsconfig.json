{
  "compilerOptions": {
    "target": "esnext",
    "module": "NodeNext", // NodeNext로 설정
    "moduleResolution": "NodeNext", // NodeNext로 설정
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@api/*": ["src/app/api/*"],
      "@hooks/*": ["src/hooks/*"],
      "@stories/*": ["src/stories/*"],
      "@styles/*": ["src/styles/*"],
      "@types/*": ["src/@types/*"],
      "@utils/*": ["src/utils/*"],
      "@lottie/*": ["public/lottie/*"],
      "@font/*": ["public/fonts/*"],
      "@component/*": ["src/component/*"],
      "@service/*": ["src/service/*"],
    },
    "forceConsistentCasingInFileNames": true
  },
  "include": ["next-env.d.ts", "src/**/*.ts", "src/**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
