{
  "compilerOptions": {
    "target": "es5",
    "baseUrl": ".",
    "paths": {
      "@api/*": [
        "src/api/*"
      ],
      "@components/*": [
        "src/components/*"
      ],
      "@hooks/*": [
        "src/hooks/*"
      ],
      "@redux/*": [
        "src/redux/*"
      ],
      "@styles/*": [
        "src/styles/*"
      ],
      "@utils/*": [
        "src/utils/*"
      ]
    },
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "module": "esnext",
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "jsx": "preserve",
    "jsxImportSource": "@emotion/react",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true,
    "removeComments": true, //컴파일시 주석제거
    "allowJs": true, // js 파일들 ts에서 import해서 쓸 수 있는지
    "incremental": true,
    "noEmit": true, // 출력 유무 설정
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "src/@types"
  ],
  "exclude": [
    "node_modules"
  ]
}